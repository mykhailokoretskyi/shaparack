<!-- For sale gallery -->
<% if (catsForSale && catsForSale.length > 0) { %>
<div class="row catForSale" style="background-color: rgba(0,0,0,0.79); color: #ddd;">
    <div class="col-xs-12 text-center mgBot20">
        <h3 class="welcome text-shadow font47px"><%= texts.home.forSale %></h3>
    </div>
    <div class="col-xs-10 col-xs-offset-1 forSaleGallery">
        <% for(var i = 0; i < catsForSale.length; ++i) { %>
        <% var cat = catsForSale[i] %>
        <div class="col-sm-6 col-md-6 forSaleItem">
            <div class="thumbnail">
                <img src="<%= cat.images[0].path %>/<%= cat.images[0].name %>" alt="<%= cat.name %>">
                <div class="caption">
                    <h3><%= cat.name %></h3>
                    <p>
                        <a href="/cat/<%= cat.id %>" class="btn btn-primary" role="button">Read more</a>
                    </p>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>
<script>
    jQuery(document).ready(function(){
        var slidesToShow = $(document).width() > 992 ? 4 : 1;

        $('.forSaleGallery').slick({
            centerMode: true,
            arrows: true,
            slidesToShow: slidesToShow,
            autoplay: true,
            autoplaySpeed: 2500,
            speed: 500,
            variableWidth: false,
            accessibility: true,
            dots: false,
            focusOnSelect: true,
            centerPadding: '0px'
        });
    });
</script>
<% } %>
<!-- END For sale gallery -->
