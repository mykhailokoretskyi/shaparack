<!DOCTYPE html>
<html>

<%- include('layout/head') %>

<body data-spy="scroll" data-target=".navbar" data-offset="0">
<script type="text/javascript">
    var recaptchaNotARobot = function() {
        if ($('input.send').hasClass('disabled')) {
            $('input.send').removeClass("disabled");
        }
    };
    var recaptchaExpired = function() {
        if (!$('input.send').hasClass('disabled')) {
            $('input.send').addClass("disabled");
        }
    };
</script>
<%- include('layout/header') %>

<%- include('modules/fb') %>

<div class="col-md-offset-1 col-md-10 contacts-container">
    <div class="page-header mgTop20">
        <h1 class="welcome"><span class="text-shadow"><%= texts.contacts.caption %></span></h1>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6">

            <form action="/contacts" class="form-horizontal center-block" method="POST">

                <div class="col-xs-12 col-sm-12 col-md-12">
                    <input id="name" class="form-control" placeholder='<%= texts.contacts.name %>' required="required"/>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-12">
                    <input id="email" class="form-control" required="required" placeholder="Email" type="email"/>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-12">
                    <input id="subject" class="form-control" placeholder='<%= texts.contacts.subject %>' required="required"/>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-12">
                    <textarea id="message" class="form-control" rows="5" placeholder='<%= texts.contacts.message %>' required="required"></textarea>
                </div>
                <div class="col-xs-1 col-sm-1 col-md-6">
                    <div class="g-recaptcha" data-callback="recaptchaNotARobot"
                         data-expired-callback="recaptchaExpired"
                         data-sitekey="6LermAYTAAAAAHPpWhtopsFYjfa-foznOP1-IbTS"
                         style="text-align: left; margin:5px auto;"></div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div style="text-align: left; margin:5px auto;">
                        <input type="submit" class="btn btn-active send disabled" value="Send"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="clearfix"></div>

<%- include('layout/footer') %>

<%- include('layout/scrollListeners') %>

</body>
</html>
