<div class="pulse1 hidden-xs hidden-sm" style="display: none;"></div>

<script>
    $(window).scroll(function() {
        if ($(window).scrollTop() > 400) {
            $('.pulse1').show();
        } else {
            $('.pulse1').hide();
        }
