<div class="go-to-top hidden-xs hidden-sm" style="display: none;"></div>
<script>
    $("div.go-to-top").click(function() {
        $("html, body").animate({ scrollTop: 0 }, "slow");
        return false;
    });
    $(window).scroll(function() {
        if ($(window).scrollTop() > 400) {
            $('div.go-to-top').show();
        } else {
            $('div.go-to-top').hide();
        }
    });
</script>
